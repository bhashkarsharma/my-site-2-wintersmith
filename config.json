{
  "locals": {
    "url": "http://localhost:8000",
    "name": "Bhashkar Sharma",
    "owner": "Bhashkar Sharma",
    "description": "Dreamer. Wonderer.",
    "feedPath": "/feed.xml",
    "analytics_id": "UA-2340837-4"
  },
  "port" : "8000",
  "plugins": [
    "./plugins/paginator.coffee",
    "./plugins/home.coffee",
    "./plugins/blog.coffee",
    "wintersmith-handlebars",
    "wintersmith-tag"
  ],
  "shared": {
    "articles": "articles"
  },
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "jade": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "perPage": 10,
    "template": "blog.hbs",
    "first": "blog/index.html",
    "filename": "blog/page/%d/index.html"
  },
  "tag": {
    "template": "tag-index.hbs",
    "perPage": 10
  },
  "blog": {
    "postsDir": "articles",
    "template": "article.hbs",
    "filenameTemplate": "/:year/:month/:day/:title/index.html"
  },
  "ignore": [
    "**/.DS_Store"
  ]
}

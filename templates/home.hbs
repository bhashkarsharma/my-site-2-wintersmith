{{!< layout.hbs }}
<!-- Intro -->
<section id="top" class="one dark cover">
    <div class="container">

        <header>
            <div class="profile">
                <span class="b">B</span>
                <span class="s">S</span>
            </div>
            <h2 class="alt">Hi! I'm <strong>Bhashkar</strong>.</h2>
            <p>My favorite tools:</p>
            <section class="tools">
                <div class="row">
                    <div class="3u">
                      <img src="/images/tools/javascript.png" />
                    </div>
                    <div class="3u">
                        <i class="fa fa-html5"></i>
                    </div>
                    <div class="3u">
                      <i class="fa fa-css3"></i>
                    </div>
                    <div class="3u">
                      <img src="/images/tools/python.png" />
                    </div>
                </div>
            </section>
        </header>

    </div>
</section>

<!-- About Me -->
<section id="about" class="two">
    <div class="container">

        <header>
            <h2>About Me</h2>
        </header>
        
        {{>about}}

    </div>
</section>

<!-- lab -->
<section id="lab" class="three">
    <div class="container">

        <header>
            <h2><a href="/lab/">Lab</a></h2>
        </header>
        
        {{>lab}}

        <footer>
            <a href="/lab/" class="button scrolly">Visit the Lab</a>
        </footer>

    </div>
</section>

<!-- Posts -->
<section id="posts" class="four">
    <div class="container">

        <header>
            <h2>Latest Posts</h2>
        </header>
        
        {{{featured articles}}}

        <article id="blog-box" class="container box style2">
            <div class="inner">
                <a href="{{blogPage}}" class="button">Visit my blog</a>
            </div>
        </article>

    </div>
</section>